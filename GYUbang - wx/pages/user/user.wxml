<view>
    <view style="display: flex; background-color: rgb(255, 255, 255); margin: 20rpx 35rpx; border-radius: 8px; ">
        <van-row style="width: 100%; height: 100%; margin: 50rpx 0rpx;">
            <van-col span="8">
                <van-image class="avatar" round radius="8rpx" width="150rpx" height="150rpx" fit: contain src="{{ avatar }}" />
            </van-col>
            <van-col span="16">
                <text class="username" style="position: relative; left: 30rpx; top: 50rpx">{{ username }}</text>
            </van-col>
        </van-row>
    </view>

    <view>
        <van-cell-group inset>
            <van-cell title="我的信息" bindtap="userInfo" is-link />
            <van-cell title="我的维修申请" bindtap="upkeep" is-link />
            <van-cell title="我的快递代领" bindtap="MyUToU" is-link />
            <van-cell title="我的失物招领" bindtap="lostArticle" is-link />
        </van-cell-group>
    </view>
    <view>
        <van-row>
            <button class="logout" bindtap="logout" style="position: relative; left: 1rpx; top: 46rpx">退出登录</button>
        </van-row>
    </view>
</view>