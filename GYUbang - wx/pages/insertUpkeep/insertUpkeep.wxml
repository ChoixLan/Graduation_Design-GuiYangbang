<view>
    <van-cell-group>
        <van-field model:value="{{ cause }}" size="large" clickable clearable label="维修原因：" placeholder="请输入维修原因"/>
    </van-cell-group>
    <van-cell-group>
        <van-field model:value="{{ address }}" size="large" clickable clearable label="维修地址：" placeholder="请输入维修地址"/>
    </van-cell-group>

    <!-- 弹窗 -->
    <van-dialog id="van-dialog" />

    <view style="text-align: center; margin-top: 200rpx;">
        <button bindtap="insertUpkeep" type="primary" style="width: 50%;">发起维修申请</button>
    </view>
</view>